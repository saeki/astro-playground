---
import Layout from "@/layouts/Layout.astro";
import Card from "@/components/Card.astro";
import ReactCard from "@/components/ReactCard";
import SolidCard from "@/components/SolidCard";
---

<Layout title="Welcome to Astro.">
  <main class="mx-auto max-w-2xl p-8">
    <h1 class="text-5xl font-extrabold">
      Welcome to <span
        class="bg-gradient-to-r from-violet-600 to-pink-500 bg-clip-text text-transparent"
        >Astro</span
      >
    </h1>
    <p class="my-4 rounded-md border border-violet-200 bg-white p-4">
      To get started, open the directory <code
        class="rounded bg-violet-100 px-1.5 py-1 font-semibold text-violet-600"
        >src/pages</code
      > in your project.<br />
      <strong class="text-violet-600">Code Challenge:</strong> Tweak the "Welcome
      to Astro" message above.
    </p>
    <ul role="list" class="grid grid-cols-2 gap-4">
      <Card
        href="https://docs.astro.build/"
        title="Documentation"
        body="Learn how Astro works and explore the official API docs."
      />
      <ReactCard
        href="https://astro.build/integrations/"
        title="Integrations"
        body="Supercharge your project with new frameworks and libraries."
      />
      <SolidCard
        href="https://astro.build/themes/"
        title="Themes"
        body="Explore a galaxy of community-built starter themes."
      />
      <Card
        href="https://astro.build/chat/"
        title="Community"
        body="Come say hi to our amazing Discord community. ❤️"
      />
    </ul>
  </main>
</Layout>
